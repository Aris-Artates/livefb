# Backend API endpoint (no trailing slash)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Facebook — Login / OAuth App ID (used by FB.login() and the OAuth callback)
NEXT_PUBLIC_FACEBOOK_LOGIN_APP_ID=YOUR_FACEBOOK_LOGIN_APP_ID

# Facebook — Livestream / Video Embed App ID (used by the fb-video XFBML embed)
NEXT_PUBLIC_FACEBOOK_LIVESTREAM_APP_ID=YOUR_FACEBOOK_LIVESTREAM_APP_ID

# Supabase (ANON key only — never the service_role key)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...YOUR_ANON_KEY
