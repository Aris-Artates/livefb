# ── JWT ───────────────────────────────────────────────────────────────────────
# Generate a strong secret: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_USE_STRONG_RANDOM_SECRET_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Supabase ──────────────────────────────────────────────────────────────────
# NEVER expose SERVICE_KEY to the frontend. Only use it server-side.
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_SERVICE_KEY=eyJ...YOUR_SERVICE_ROLE_KEY
SUPABASE_ANON_KEY=eyJ...YOUR_ANON_KEY

# ── Facebook — Login / OAuth App ──────────────────────────────────────────────
# Create a dedicated "Login App" at developers.facebook.com.
# Add the "Facebook Login" product. Used only for OAuth user authentication.
FACEBOOK_LOGIN_APP_ID=YOUR_FACEBOOK_LOGIN_APP_ID
FACEBOOK_LOGIN_APP_SECRET=YOUR_FACEBOOK_LOGIN_APP_SECRET
FACEBOOK_LOGIN_REDIRECT_URI=https://your-domain.com/api/auth/facebook/callback

# ── Facebook — Livestream / Video Embed App ────────────────────────────────────
# Frontend-only — goes in frontend/.env.local, NOT here.
# See NEXT_PUBLIC_FACEBOOK_LIVESTREAM_APP_ID in frontend/.env.local.example.

# ── Ollama (local) ────────────────────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ── App ───────────────────────────────────────────────────────────────────────
FRONTEND_URL=http://localhost:3000
ENVIRONMENT=development
